{
  "include": ["src"],
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
